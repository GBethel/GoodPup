@page "/dashboard"

<style>
.dashboard-container {
    display: flex;
    flex-direction: row;
    min-height: 100vh;
    background: #f6cd99;
    font-family: 'Architects Daughter', cursive, sans-serif;
}
.sidebar {
    width: 340px;
    background: linear-gradient(to bottom, #1a2a4f 0%, #3a1a4f 100%);
    color: #fff;
    padding: 18px 0 0 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 36px;
}
.pet-card {
    background: #fff;
    color: #222;
    border-radius: 10px;
    width: 90%;
    margin-bottom: 18px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    overflow: hidden;
}
.pet-img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}
.pet-meta {
    background: #4a4a4a;
    color: #fff;
    font-size: 0.95rem;
    padding: 4px 12px;
}
.pet-info {
    padding: 10px 18px 10px 18px;
}
.pet-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 2px;
}
.pet-subtitle {
    font-size: 1.1rem;
    margin-bottom: 8px;
}
.pet-details {
    font-size: 1.05rem;
    margin-bottom: 8px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2px 18px;
}
.pet-details div {
    margin-bottom: 2px;
}
.pet-contact {
    font-size: 1rem;
    margin-top: 8px;
}
.sidebar-nav {
    margin-top: 18px;
    width: 90%;
}
.sidebar-nav a {
    display: block;
    padding: 10px 0 10px 18px;
    color: #fff;
    text-decoration: none;
    font-size: 1.15rem;
    border-radius: 6px;
    margin-bottom: 6px;
    transition: background 0.2s;
}
.sidebar-nav a.active, .sidebar-nav a:hover {
    background: #6ec1e4;
    color: #222;
}

.main-content {
    flex: 1;
    padding: 38px 0 0 0;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.care-title {
    font-size: 2.3rem;
    font-weight: bold;
    color: #222;
    margin-bottom: 18px;
    text-shadow: 2px 2px 6px #bfa76a44;
}
.task-panels {
    display: flex;
    flex-direction: row;
    gap: 32px;
}
.panel {
    background: #fff3e0;
    border-radius: 18px;
    padding: 18px 24px 18px 24px;
    min-width: 320px;
    max-width: 340px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    margin-bottom: 18px;
    display: flex;
    flex-direction: column;
}
.panel h2 {
    font-size: 1.35rem;
    font-weight: bold;
    color: #222;
    margin-bottom: 8px;
}
.panel hr {
    border: none;
    border-top: 2px solid #888;
    margin: 0 0 10px 0;
}
.task-list {
    list-style: none;
    padding: 0;
    margin: 0;
}
.task-list li {
    display: flex;
    align-items: center;
    font-size: 1.15rem;
    margin-bottom: 10px;
}
.task-dot {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    margin-right: 10px;
    background: #444;
    display: inline-block;
}
.task-dot.upcoming {
    background: #fff;
    border: 2px solid #444;
}
.add-task-btn {
    margin-top: 12px;
    background: #1daae2;
    color: #fff;
    border: none;
    border-radius: 16px;
    padding: 8px 24px;
    font-size: 1.15rem;
    cursor: pointer;
    font-family: inherit;
    transition: background 0.2s;
}
.add-task-btn:hover {
    background: #0d8ecf;
}
</style>

