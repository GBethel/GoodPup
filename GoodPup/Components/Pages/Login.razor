
@page "/login"

<style>
    .login-bg {
        background: #f6cd99;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        font-family: 'Architects Daughter', cursive, sans-serif;
    }
    .login-title {
        margin-top: 32px;
        letter-spacing: 3.5em;
        font-size: 2.1rem;
        color: #222;
        font-family: 'Architects Daughter', cursive, sans-serif;
        font-weight: normal;
        text-align: center;
        margin-bottom: 0.5em;
    }
    .login-welcome {
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 0.7em;
        color: #222;
        font-family: inherit;
    }
    .login-form-box {
        background: #fff3e0;
        margin: 0 auto;
        padding: 24px 24px 10px 24px;
        border-radius: 4px;
        box-shadow: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 260px;
        max-width: 320px;
    }
    .login-input {
        width: 220px;
        font-size: 1.3rem;
        margin-bottom: 16px;
        padding: 6px 12px;
        border: 2px solid #888;
        border-radius: 4px;
        text-align: center;
        font-family: inherit;
        background: #fff;
    }
    .login-button {
        width: 120px;
        font-size: 1.1rem;
        background: #1daae2;
        color: #fff;
        border: none;
        border-radius: 20px;
        padding: 4px 0 4px 0;
        margin-bottom: 12px;
        cursor: pointer;
        font-family: inherit;
        transition: background 0.2s;
    }
    .login-button:hover {
        background: #0d8ecf;
    }
    .signup-button {
        width: 170px;
        font-size: 1.3rem;
        background: #1daae2;
        color: #222;
        border: none;
        border-radius: 20px;
        padding: 6px 0 6px 0;
        margin-bottom: 8px;
        cursor: pointer;
        font-family: inherit;
        transition: background 0.2s;
    }
    .signup-button:hover {
        background: #0d8ecf;
        color: #fff;
    }
    .service-number {
        font-size: 1rem;
        color: #1daae2;
        margin-top: 6px;
        margin-bottom: 0;
        font-family: inherit;
    }
</style>

<div class="login-bg">
    <div class="login-title">G o o d &nbsp;&nbsp;&nbsp; P u p</div>
    <div class="login-welcome">Welcome!</div>
    <div class="login-form-box">
        <input class="login-input" placeholder="Username" />
        <input class="login-input" placeholder="Password" type="password" />
        <button class="login-button">Login</button>
        <button class="signup-button">Sign Up</button>
        <div class="service-number">Service Number 1-800-1234</div>
    </div>
</div>


