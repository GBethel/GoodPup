@page "/"

<PageTitle>Good Pup</PageTitle>

<style>
.landing-bg {
    background-color: #f5d9a1;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}
.paw-container {
    position: relative;
    width: 600px;
    height: 600px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.paw-svg {
    width: 100%;
    height: 100%;
    display: block;
}
.add-pup-text {
    position: absolute;
    left: 50%;
    top: 62%;
    transform: translate(-50%, -50%);
    font-family: 'Comic Sans MS', 'Comic Sans', cursive;
    font-size: 2rem;
    color: #37507a;
    text-shadow: 2px 2px 6px #bfae8a;
    pointer-events: none;
    letter-spacing: 0.05em;
}
</style>

<div class="landing-bg">
    <div class="paw-container">
        <svg class="paw-svg" viewBox="0 0 600 600">
            <defs>
                <path id="goodpup-curve" d="M 185 300 A 170 110 0 0 1 465 320" fill="none" />
            </defs>
            <!-- Central Pad -->
            <ellipse cx="300" cy="400" rx="170" ry="110" stroke="#37507a" stroke-width="16" fill="none" />
            <!-- Toes -->
            <ellipse cx="120" cy="250" rx="55" ry="85" stroke="#37507a" stroke-width="16" fill="none" />
            <ellipse cx="240" cy="140" rx="50" ry="80" stroke="#37507a" stroke-width="16" fill="none" />
            <ellipse cx="360" cy="140" rx="50" ry="80" stroke="#37507a" stroke-width="16" fill="none" />
            <ellipse cx="480" cy="250" rx="55" ry="85" stroke="#37507a" stroke-width="16" fill="none" />
            <!-- Curved Good Pup text -->
            <text font-family="Comic Sans MS, Comic Sans, cursive" font-size="2.5rem" fill="#37507a" opacity="0.95" stroke="#bfae8a" stroke-width="0.5" letter-spacing="0.1em">
                <textPath href="#goodpup-curve" startOffset="5%">Good Pup</textPath>
            </text>
        </svg>
        <div class="add-pup-text">Add Pup Here</div>
    </div>
</div>
